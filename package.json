{
  "name": "@digcode/nestjs8-package-starter",
  "version": "1.0.0",
  "description": "NestJS npm Package Start",
  "author": "Anthony Loyaga <anthony.loyaga1@gmail.com>",
  "license": "MIT",
  "readmeFilename": "README.md",
  "main": "dist/test.js",
  "files": [
    "dist/**/*",
    "*.md"
  ],
  "scripts": {
    "start:dev": "tsc -w",
    "build": "tsc",
    "prepare": "npm run build",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "keywords": [
    "nestjs"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/anthonyloyaga1/nestjs8-package-starter"
  },
  "bugs": "https://github.com/anthonyloyaga1/nestjs8-package-starter",
  "peerDependencies": {
    "@nestjs/common": "^8.0.0"
  },
  "devDependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/testing": "8.1.1",
    "@types/express": "4.16.1",
    "@types/jest": "27.0.2",
    "@types/node": "16.0.0",
    "@types/supertest": "2.0.11",
    "jest": "^27.2.5",
    "prettier": "^2.3.2",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "tsc-watch": "^4.6.0",
    "tsconfig-paths": "3.10.1",
    "tslint": "5.16.0",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
